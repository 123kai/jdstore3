<div class="container">
  <div class="row">
    <div class="col-md-12">
      <br>
      <div class="row">
          <h2 class="col-xs-6">Shopping Cart</h2>
          <span class="col-xs-6 clean_carts">
            <%= link_to("Clean Shopping Cart", clean_carts_path,
                        method: :delete, class: "pull-right btn-sm btn-success",
                        data: { confirm: "Are you sure you want to clean your shoppig cartï¼Ÿ"}) %>
          </span>
      </div>


      <!-- product-list -->
      <div class="shopping-cart">
        <div class="cart-column-head center-block">
          <label class="col-xs-2 product-image-cart"> Product </label>
          <label class="col-xs-2 product-title-cart"> Name </label>
          <label class="col-xs-2 product-price-cart"> Unit Price </label>
          <label class="col-xs-2 product-quantity-cart"> Quantity </label>
          <label class="col-xs-2 product-removal-cart"> Operatioin </label>
          <label class="col-xs-2 product-line-price-cart"> Total </label>
        </div>

        <!-- cart-products -->
        <% current_cart.cart_items.each do |cart_item| %>  
          <!-- product picture -->
          <div class="product-list-cart row text-center">
            <div class="col-xs-2 product-image-cart">
              <%= link_to product_path(cart_item.product) do%>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "img-responsive center-block") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "img-responsive center-block") %>
                <% end %>
              <% end %>
            </div>

            <!-- product title -->
            <div class="col-xs-2 product-title-cart">
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </div>

            <!-- product unit price  -->
            <div class="col-xs-2 product-title-cart">
              $<%= cart_item.product.price %>
            </div>

            <!-- product quantity -->
            <div class="col-xs-2 product-title-cart">
              <%= simple_form_for cart_item, url: cart_item_path(cart_item.product_id) do |f| %>
                <%= f.select :quantity, 1..cart_item.product.quantity %>
                <%= f.submit "Update", class: "btn btn-sm btn-warning", data: { disable_with: "Submiting..."} %>
              <% end %>
            </div>

            <!-- Delete products -->
            <div class="col-xs-2 product-title-cart">
              <%= link_to cart_item_path(cart_item.product_id), method: :delete do%>
                <i class="fa fa-trash"></i>
              <% end %>
            </div>

            <!-- products total price -->
            <div class="col-xs-2 product-title-cart">
              $<%= cart_item.product.price * cart_item.quantity %>
            </div>
          </div>
          <hr>

        <% end %>
      </div>


      <div class="row">

        <!-- total-price -->
        <div class="container">
          <span class="pull-right text-center product-price-title">
            Total: $<%= render_cart_total_price(current_cart) %>
          </span>
        </div>

        <div class="container add-to-cart-button">
          <%= link_to("Checkout", checkout_carts_path, method: :post, class: "btn btn-danger pull-right") %>
        </div>

      </div>

    </div>
  </div>
</div>
