<div class="container product-box">
  <div class="row">

    <% @products.each do |product| %>
      <div class="col-xs-6 col-md-3 text-center product-list">
        <% link_to product_path(product) %>
          <% if product.image.present? %>
            <%= link_to image_tag(product.image.thumb.url, class: "product-list-img img-responsive center-block"), product_path(product) %>
          <% else %>
            <%= link_to image_tag("http://placehold.it/200x200&text=No Pic", class: "product-list-img img-responsive center-block"), product_path(product) %>
          <% end %>
        <br>
        <%= link_to(product.title, product_path(product)) %>
        <br>
        <p><%= link_to(product.price, product_path(product)) %></p>
      </div>
    <% end %>

  </div>
</div>
