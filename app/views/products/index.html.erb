<div class="product-wrapper">
  <div class="row">
    <div class="product-banner">
    </div>
      <div class="product-content">
        <% @products.each do |product| %>
          <div class="product-list">
            <%= link_to product_path(product) do %>
            <!-- <div class="product-list">     -->
              <% if product.image.present? %> 
                <%= image_tag(product.image.medium.url, class: "product-list-img") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
              <i class="fa fa-plus"></i>
              <button type="button" class="product-list-favourite"></button>
              <h3 class="product-list-title"><%= product.title %></h3>
              <div class="product-ratings">
                <div class="rating-brick">
                </div>
              </div>
              <p class="product-list-price"><%= product.price %></p>
          </div>
          <% end %>
        <% end %>
      </div>
  </div>
</div>
